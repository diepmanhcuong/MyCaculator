<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F57F17"
    android:stretchColumns="*">

    <TableRow>

        <TextView
            android:id="@+id/txresult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4"
            android:background="#616161"
            android:maxLength="17"
            android:maxLines="2"
            android:text="0"
            android:textColor="#fff"
            android:textSize="60sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickClear"
            android:padding="20dp"
            android:text="@string/c"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/doi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickDoi"
            android:padding="20dp"
            android:text="+/_"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickOperator"
            android:padding="20dp"
            android:text="%"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/chia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#F57F17"
            android:onClick="onClickOperator"
            android:padding="20dp"
            android:text="/"
            android:textSize="@dimen/size30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="7"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/tam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="8"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/chin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="9"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#F57F17"
            android:onClick="onClickOperator"
            android:padding="20dp"
            android:text="*"
            android:textSize="@dimen/size30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="4"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="5"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/sau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="6"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/cong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#F57F17"
            android:onClick="onClickOperator"
            android:padding="20dp"
            android:text="+"
            android:textSize="@dimen/size30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/mot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="1"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/hai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="2"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/ba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="3"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/tru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#F57F17"
            android:onClick="onClickOperator"
            android:padding="20dp"
            android:text="-"
            android:textSize="@dimen/size30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/khong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_span="2"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="0"
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/cham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#E0E0E0"
            android:onClick="onClickNumber"
            android:padding="20dp"
            android:text="."
            android:textSize="@dimen/size30sp" />

        <Button
            android:id="@+id/bang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#F57F17"
            android:onClick="onClickEquals"
            android:padding="20dp"
            android:text="="
            android:textSize="@dimen/size30sp" />

    </TableRow>

</TableLayout>